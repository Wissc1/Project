/* Draw a line in the middle of the screen vertically */
var line = document.createElement('div');
line.style.width = '1px';
line.style.height = '100%';
line.style.backgroundColor = 'black';
line.style.position = 'absolute';
line.style.left = '50%';
document.body.appendChild(line);
/* Separate the screen in 2 sides verically */
var left = document.createElement('div');
left.style.width = '50%';
left.style.height = '100%';
left.style.position = 'absolute';
left.style.left = '0';
left.style.backgroundColor = 'red';
document.body.appendChild(left);
var right = document.createElement('div');
right.style.width = '50%';
right.style.height = '100%';
right.style.position = 'absolute';
right.style.left = '50%';
right.style.backgroundColor = 'blue';
document.body.appendChild(right);
/* In both sides make a filed at the top that I can type into for team1 in the left side and team2 in the right side */
var team1 = document.createElement('input');
team1.style.width = '100%';
team1.style.height = '10%';
team1.style.position = 'absolute';
team1.style.top = '0';
team1.style.left = '0';
team1.style.backgroundColor = 'white';
team1.style.border = 'none';
team1.style.fontSize = '30px';
team1.style.textAlign = 'center';
team1.style.fontWeight = 'bold';
team1.style.color = 'red';
team1.value = 'Team 1';
left.appendChild(team1);
var team2 = document.createElement('input');
team2.style.width = '100%';
team2.style.height = '10%';
team2.style.position = 'absolute';
team2.style.top = '0';
team2.style.left = '0';
team2.style.backgroundColor = 'white';
team2.style.border = 'none';
team2.style.fontSize = '30px';
team2.style.textAlign = 'center';
team2.style.fontWeight = 'bold';
team2.style.color = 'blue';
team2.value = 'Team 2';
right.appendChild(team2);
